# AssemblyAI API key (required)
ASSEMBLYAI_API_KEY=your_api_key_here

# Output directories
OUTPUT_DIR=output
AUDIO_DIR=audio
FILENAME_STYLE=title_id

# Audio settings
AUDIO_FORMAT=mp3

# AssemblyAI settings
LANGUAGE_CODE=en_us

# Processing settings
CONCURRENCY=2
DOWNLOAD_RETRIES=2
TRANSCRIPTION_RETRIES=2
POLL_INTERVAL_MS=5000
MAX_POLL_MINUTES=60

# Optional filters
MAX_VIDEOS=
AFTER_DATE=

# Output formats
CSV_ENABLED=false

# AssemblyAI credits preflight
ASSEMBLYAI_CREDITS_CHECK=warn
ASSEMBLYAI_MIN_BALANCE_MINUTES=60

# Optional explicit yt-dlp path (useful for VSCode terminals)
YT_DLP_PATH=
